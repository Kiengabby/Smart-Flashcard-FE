<nz-modal 
  [nzVisible]="visible"
  nzTitle="Community Tips Debug"
  [nzFooter]="null"
  [nzWidth]="700"
  [nzZIndex]="2000"
  [nzBodyStyle]="{ padding: '24px', backgroundColor: '#ffffff' }"
  (nzOnCancel)="onVisibleChange(false)">

  <!-- FORCE VISIBLE DEBUG CONTENT -->
  <div style="background: red; color: white; padding: 20px; font-size: 16px; margin-bottom: 20px; position: relative; z-index: 3000;">
    <h2>ðŸ”´ DEBUG - MODAL IS WORKING!</h2>
    <p><strong>Card ID:</strong> {{ card?.id || 'No card' }}</p>
    <p><strong>Tips count:</strong> {{ tips.length }}</p>
    <p><strong>Is Loading:</strong> {{ isLoading }}</p>
    <p><strong>Visible:</strong> {{ visible }}</p>
  </div>

  <!-- TIPS DISPLAY -->
  <div style="background: yellow; color: black; padding: 20px; margin: 20px 0; position: relative; z-index: 3000;">
    <h3>ðŸŸ¡ TIPS SECTION</h3>
    <div *ngIf="tips.length > 0">
      <h4>Found {{ tips.length }} tip(s):</h4>
      <div *ngFor="let tip of tips; let i = index" style="background: white; border: 2px solid black; padding: 15px; margin: 10px 0;">
        <h5>Tip #{{ i + 1 }}</h5>
        <p><strong>User:</strong> {{ tip.userDisplayName }}</p>
        <p><strong>Content:</strong> {{ tip.content }}</p>
        <p><strong>Likes:</strong> {{ tip.likesCount }}</p>
      </div>
    </div>
    <div *ngIf="tips.length === 0 && !isLoading" style="background: orange; padding: 10px;">
      <p>No tips found!</p>
    </div>
    <div *ngIf="isLoading" style="background: blue; color: white; padding: 10px;">
      <p>Loading tips...</p>
    </div>
  </div>

  <!-- CLOSE BUTTON -->
  <div style="text-align: center; margin-top: 20px;">
    <button nz-button nzType="primary" (click)="onVisibleChange(false)">Close Modal</button>
  </div>

</nz-modal>
